@model NorthwindShop.Models.TemporaryModels.Register
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<link href="~/Content/CSS/ValidationErrorStyle.css" rel="stylesheet" />

@using (Html.BeginForm("Register", "User", FormMethod.Post))
{

    @Html.ValidationSummary(true)

    <div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <br />
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <br />
    </div>

    <div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <br />
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <br />
    </div>

    <div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <br />
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <br />
    </div>
    <div>
        <div class="editor-label">
            @Html.LabelFor(model => model.RepeatPassword)
        </div>
        <br />
        <div class="editor-field">
            @Html.EditorFor(model => model.RepeatPassword)
            @Html.ValidationMessageFor(model => model.RepeatPassword)
        </div>
        <br />
    </div>
    <br />

    <input id="submit" type="submit" value="Register" />
    <br>
    <hr />
    <br />
    @Html.ActionLink("Back", "Index", "Home")
}

