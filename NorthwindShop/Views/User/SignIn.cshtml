@model NorthwindShop.Models.TemporaryModels.Login
@{
    ViewBag.Title = "SignIn";
    Layout = null;
}

<link href="~/Content/CSS/ValidationErrorStyle.css" rel="stylesheet" />

@using (Html.BeginForm("SignIn", "User", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    <div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <br />
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <br />
    </div>

    <div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <br />
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <br />
    </div>
    <br/>
   <p> @Html.ActionLink("Haven't account? ", "Register","User")</p>
    <input type="submit" value="Sign In" />
  
    <br>
    <hr/>
    <br/>
    @Html.ActionLink("Back","Index","Home")
}